{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "strict": true,
    "noEmitOnError": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "newLine": "LF",
    "outDir": "dist/",
    "sourceMap": true,
    "target": "es2018"
  },
  "include": [
    "src"
  ]
}
